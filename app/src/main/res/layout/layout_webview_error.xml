<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/base_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/base_padding_xlarge"
    android:paddingRight="@dimen/base_padding_xlarge">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_margin_middle"
        android:layout_marginTop="@dimen/base_margin_middle"
        android:padding="@dimen/base_padding_small"
        android:text="@string/webview_error_title"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/base_textsize_large" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/base_divider_color" />


    <TextView
        android:id="@+id/webview_error_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_middle"
        android:padding="@dimen/base_padding_small"
        android:text="@string/webview_error_info"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/base_textsize_middle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_smallest"
        android:padding="@dimen/base_padding_small"
        android:text="@string/webview_error_description"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/base_textsize_middle"
        android:layout_marginBottom="@dimen/base_margin_middle"
        />

    <Button
        android:id="@+id/webview_wifi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_large"
        android:background="@drawable/webview_retry_btn_n"
        android:gravity="center"
        android:paddingBottom="@dimen/base_padding_small"
        android:paddingLeft="@dimen/base_padding_xlarge"
        android:paddingRight="@dimen/base_padding_xlarge"
        android:paddingTop="@dimen/base_padding_small"
        android:text="@string/webview_error_retry_wifi"
        android:textColor="@color/color_000000" />

    <Button
        android:id="@+id/webview_retry_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_large"
        android:background="@drawable/webview_retry_btn_n"
        android:gravity="center"
        android:paddingBottom="@dimen/base_padding_small"
        android:paddingLeft="@dimen/base_padding_xlarge"
        android:paddingRight="@dimen/base_padding_xlarge"
        android:paddingTop="@dimen/base_padding_small"
        android:text="@string/webview_error_retry"
        android:textColor="@color/color_000000" />

</LinearLayout>

