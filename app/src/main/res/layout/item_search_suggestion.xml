<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/base_margin_middle"
    android:orientation="vertical"
    android:id="@+id/suggest_item_layout">

    <ImageView
        android:id="@+id/suggest_item_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base_margin_middle"
        android:src="@drawable/item_search_suggestion_icon" />

    <ImageView
        android:id="@+id/suggest_item_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/base_margin_middle"
        android:src="@drawable/item_search_suggestion_icon"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/suggest_item_webtitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base_margin_middle"
        android:layout_toLeftOf="@id/suggest_item_star"
        android:layout_toRightOf="@+id/suggest_item_icon"
        android:gravity="center_vertical"
        android:text="火狐主页"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/base_textsize_middle" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/suggest_item_webtitle"
        android:layout_marginTop="@dimen/base_margin_middle"
        android:background="@color/base_divider_color" />


</RelativeLayout>